.container
  %alert{ ng_if: "alerts", type: "{{alerts.type}}" } {{alerts.msg}}
  .col-md-9
    .thumbnail
      %img.img-responsive#showImg{ src: "{{recette.image.url}}" }
      .caption-full
        %h4 {{ recette.name }}
        %p{ ng_bind_html: "recette.instructions | nl2br" }
        %h4 Ingredients :
        %p{ ng_repeat: "ingredient in ingredients" } {{ ingredient.name }}
    %button.btn.btn-default{ ng_click: "back()" } Back
    %button.btn.btn-default{ ng_click: "edit()" } Editer
    %button.btn.btn-danger{ ng_click: "open()" } Supprimer

    %script{ type: "text/ng-template", id: "delete.html" }
      .modal-header
        %h3{ class: "modal-title" } Voulez vous vraiment supprimer cette recette ?
      .modal-footer
        %button.btn.btn-primary{ ng_click: "ok()" } OK
        %button.btn.btn-warning{ ng_click: "cancel()" } Cancel
